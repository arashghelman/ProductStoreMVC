@model Sample01.Models.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>


<p>
    @Html.ActionLink("Go to Product Page", "Index", "Product")
</p>
<p>
    @Html.ActionLink("Create New Category", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.GetCategory())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
            </td>
        </tr>
    }

</table>
