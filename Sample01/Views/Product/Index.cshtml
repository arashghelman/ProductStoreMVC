@model Sample01.Models.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Index";
}

<h1>Our Products</h1>
<hr class="h1-hr">
<div class="row">
    @foreach (var item in Model.ProductList)
    {
        <div class="col-sm-6">
            <div class="product-div">
                <div id="product-title">
                    <h2>
                        @Html.DisplayFor(modelItem => item.Title)
                    </h2>
                </div>
                <div class="product-image">
                    @{ 
                        if (item.ProductPhoto != null)
                        {
                            var base64 = Convert.ToBase64String(item.ProductPhoto);
                            var imageSource = string.Format("data:image/gif;base64,{0}", base64);
                            <img src="@imageSource" />
                        }
                    }
                </div>
                <div class="information">
                    @Html.LabelFor(modelItem => item.Category.CategoryName):
                    <br />
                    @Html.LabelFor(modelItem => item.UnitPrice):
                    <br />
                    @Html.LabelFor(modelItem => item.Discount):
                    <br />
                    @Html.LabelFor(modelItem => item.UnitsInStock):
                </div>
                <div class="product-info">
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    <br />
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                    <br />
                    @Html.DisplayFor(modelItem => item.Discount)
                    <br />
                    @Html.DisplayFor(modelItem => item.UnitsInStock)
                </div>
            </div>
        </div>
